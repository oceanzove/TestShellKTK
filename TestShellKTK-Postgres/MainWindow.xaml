<Window x:Class="TestShellKTK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:TestShellKTK.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="AdminTestShell" Height="600" Width="920"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Border Background="{StaticResource colorDark1}"
            CornerRadius="0 0 20 20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Text="Test Shell"
                       VerticalAlignment="Center"
                       FontFamily="Arial"
                       FontWeight="500"
                       HorizontalAlignment="Left"
                       Foreground="White"
                       FontSize="28"
                       Margin="20 0 0 0" />

            <StackPanel Grid.Row="1" Grid.Column="0">

                
                <RadioButton Content="Teachers"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuRadioButtonTheme}"
                             IsChecked="True"
                             Command="{Binding TeacherViewCommand}" />
                <RadioButton Content="Heads"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuRadioButtonTheme}" />
                <RadioButton Content="Students"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuRadioButtonTheme}"
                             Command="{Binding StudentViewCommand}" />

            </StackPanel>

            <TextBox Width="250"
                     Style="{StaticResource ModernTextBox}"
                     Height="40"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="5"
                     Grid.Column="1"
                     Grid.Row="0" />

            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            Margin="10"
                            Content="{Binding CurrentView}" />

            <StackPanel Grid.Row="0"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="0">

                <Button
                    Content="Exit"
                    Height="50"
                    Width="100"
                    Foreground="White"
                    FontFamily="Arial"
                    FontSize="14"
                    Click="onClickShutdown"
                    Style="{StaticResource MenuButtonTheme}">

                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>